# Database
MONGODB_URI=mongodb://localhost:27017/botrix-dashboard

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Socket.io
SOCKET_PORT=3001
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# File Upload
UPLOAD_MAX_SIZE=10485760
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Cloudinary (for production file uploads)
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_UPLOAD_PRESET=botrix_uploads

# Webhook Security
WEBHOOK_SECRET=your-webhook-secret-key-change-in-production
ALLOWED_WEBHOOK_ORIGINS=* 

# Google Cloud Voice APIs (Optional - for enhanced voice features)
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here
NEXT_PUBLIC_GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here

# Voice Debug Mode (Optional)
DEBUG_VOICE=false 